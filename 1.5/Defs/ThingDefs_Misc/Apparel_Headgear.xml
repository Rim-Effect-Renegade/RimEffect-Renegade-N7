<Defs>
  
  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>REN7_Apparel_N7HeavyHelmet</defName>
    <label>N7 heavy helmet</label>
    <description>A heavy helmet with high armor.</description>
    <techLevel>Ultra</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>REN7_N7Armoury</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>RE_ManufacturingBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Item/Apparel/N7HeavyArmor/N7HeavyArmorHelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(0.9, 0.9)</drawSize>
    </graphicData>
    <uiIconScale>1.25</uiIconScale>
    <tradeTags>
      <li>RE_N7Armoury</li>
    </tradeTags>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>32000</WorkToMake>
      <MaxHitPoints>180</MaxHitPoints>
      <Mass>2</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.3</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
      <ArmorRating_Heat>0.7</ArmorRating_Heat>
      <Insulation_Cold>8</Insulation_Cold>
      <Insulation_Heat>6</Insulation_Heat>
      <EquipDelay>8</EquipDelay>
    </statBases>
    <costList>
      <ComponentSpacer>3</ComponentSpacer>
      <Plasteel>75</Plasteel>
	  <RE_ElementZero>10</RE_ElementZero>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>FullHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Apparel/N7HeavyArmor/N7HeavyArmorHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
      <tags>
        <li>REN7_HeavyN7Armoury</li>
      </tags>
    </apparel>
    <thingSetMakerTags>
      <li>RE_N7Armoury</li>
    </thingSetMakerTags>
    <comps>
      <li Class="CompProperties_Biocodable"/>
    </comps>
  </ThingDef>
  
