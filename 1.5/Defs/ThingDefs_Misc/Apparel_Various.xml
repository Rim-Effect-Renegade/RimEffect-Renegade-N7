<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorMachineableBase">
    <defName>REN7_Apparel_N7HeavyArmor</defName>
    <label>N7 heavy armor</label>
    <description>A suit of incredibly damage-resistant powered armor, with a powerful overshield. It slows down the user when equipped, but provides best in class protection. Driven by eezo-assisted actuators, the N7 Destroyer soldiers carry heavy weapons onto the battlefield that no one else can match.</description>
    <techLevel>Ultra</techLevel>
    <thingClass>RimEffect.ShieldBeltApparel</thingClass>
	<tickerType>Normal</tickerType>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>REN7_N7Armoury</researchPrerequisite>
      <skillRequirements>
        <Crafting>12</Crafting>
      </skillRequirements>
      <recipeUsers Inherit="False">
        <li>RE_ManufacturingBench</li>
      </recipeUsers>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Item/Apparel/N7HeavyArmor/N7HeavyArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>CutoutComplex</shaderType>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <statBases>
      <WorkToMake>98000</WorkToMake>
      <MaxHitPoints>400</MaxHitPoints>
      <Mass>15</Mass>
      <Flammability>0.4</Flammability>
      <ArmorRating_Sharp>1.3</ArmorRating_Sharp>
      <ArmorRating_Blunt>0.6</ArmorRating_Blunt>
      <ArmorRating_Heat>0.7</ArmorRating_Heat>
      <Insulation_Cold>40</Insulation_Cold>
      <Insulation_Heat>16</Insulation_Heat>
      <EquipDelay>20</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.6</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>ApparelArmor</li>
    </thingCategories>
    <tradeTags>
      <li>RE_N7Armoury</li>
    </tradeTags>
    <costList>
      <ComponentSpacer>10</ComponentSpacer>
      <Plasteel>180</Plasteel>
      <Uranium>60</Uranium>
	  <RE_ElementZero>15</RE_ElementZero>
    </costList>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Item/Apparel/N7HeavyArmor/N7HeavyArmor</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <useDeflectMetalEffect>true</useDeflectMetalEffect>
      <tags>
        <li>REN7_HeavyN7Armoury</li>
      </tags>
      <useWornGraphicMask>true</useWornGraphicMask>
    </apparel>
    <thingSetMakerTags>
      <li>RE_N7Armoury</li>
    </thingSetMakerTags>
    <comps>
      <li Class="CompProperties_Biocodable"/>
      <li Class="VFECore.CompProperties_ShieldBubble">
        <blockRangedAttack>true</blockRangedAttack>
        <blockMeleeAttack>false</blockMeleeAttack>
        <showWhenDrafted>true</showWhenDrafted>
        <showOnHostiles>true</showOnHostiles>
        <showOnNeutralInCombat>true</showOnNeutralInCombat>
        <shieldTexPath>UI/AbilityShields/ShieldTech</shieldTexPath>
        <EnergyShieldRechargeRate>0.1</EnergyShieldRechargeRate>
        <EnergyShieldEnergyMax>100</EnergyShieldEnergyMax>
        <minShieldSize>1.4</minShieldSize>
        <maxShieldSize>1.8</maxShieldSize>
        <disableRotation>true</disableRotation>
      </li>
    </comps>
  </ThingDef>

